<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
   		tools:context=".RecipeViewActivity" >

	    <RelativeLayout 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    		
	        <TextView
	            android:id="@+id/recipeName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:paddingTop="15dp"
	            android:text="Recipe Name"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            tools:ignore="HardcodedText" />
	      	
	      	<TextView
	      	    android:id="@+id/recipeAuthor"
	      	    android:layout_width="wrap_content"
	      	    android:layout_height="wrap_content"
	      	    android:layout_below="@+id/recipeName"
	      	    android:layout_centerHorizontal="true"
	      	    android:text="Recipe Author"
	      	    android:textAppearance="?android:attr/textAppearanceSmall"
	      	    tools:ignore="HardcodedText" />

	      	<Gallery
	      	    android:id="@+id/recipeGallery"
	      	    android:layout_width="fill_parent"
	      	    android:layout_height="wrap_content"
	      	    android:layout_centerHorizontal="true"
	      	    android:layout_below="@+id/recipeAuthor" />
    	
	      	<TextView 
	      	    android:id="@+id/recipeView_ingredientsLabel"
	      	    android:layout_width="wrap_content"
	      	    android:layout_height="wrap_content"
	      	    android:layout_below="@+id/recipeGallery"
	      	    android:layout_alignParentLeft="true"
	      	    android:paddingLeft="15dp"
	      	    android:text="Ingredients:"
	      	    tools:ignore="HardcodedText"
	      	    />

	      	<EditText
	      	    android:id="@+id/recipeView_ingredientsString"
	      	    android:layout_width="wrap_content"
	      	    android:layout_height="wrap_content"
	      	    android:layout_alignLeft="@+id/recipeView_ingredientsLabel"
	      	    android:layout_below="@+id/recipeGallery"
	      	    android:inputType="textMultiLine" >

	      	    <requestFocus />
	      	</EditText>
	      	
    	</RelativeLayout>
</ScrollView>
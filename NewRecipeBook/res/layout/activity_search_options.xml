<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
        <EditText
            android:id="@+id/inputName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Keywords"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            tools:ignore="HardcodedText" />
        
        <EditText
            android:id="@+id/inputTags"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Tags"
            android:layout_below="@+id/inputName"            
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            tools:ignore="HardcodedText" />
        
        <EditText
            android:id="@+id/inputIngredients"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredients"
            android:layout_below="@+id/inputTags"            
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            tools:ignore="HardcodedText" />
        
        <EditText
            android:id="@+id/inputAuthor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:layout_below="@+id/inputIngredients"            
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/searchNameBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/inputAuthor"
            android:layout_marginTop="23dp"
            android:text="Search Recipe Name" />

        <CheckBox
            android:id="@+id/searchTagBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/searchNameBox"
            android:text="Search Tags" />

        <CheckBox
            android:id="@+id/searchIngredientsBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/searchTagBox"
            android:text="Search Ingredients" />

        <CheckBox
            android:id="@+id/searchAuthorBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/searchIngredientsBox"
            android:text="Search Author" />

        <Button
            android:id="@+id/submitSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="27dp"
            android:onClick="search"
            android:text="Search!" />

</RelativeLayout>
